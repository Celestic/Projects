package alpha.java.controllers;

import java.awt.image.BufferedImage;

import alpha.java.imagetiler.ImageTiler;


public class ImageTilerController
{
	// X and Y represent rows and columns to tile to
	public BufferedImage[] tileImage(BufferedImage imageToTile, int x, int y)
	{
		return new ImageTiler().tileImage(imageToTile, x, y);
	}
	
	
	public BufferedImage rebuildTiles(BufferedImage[] tiles, int x, int y)
	{
		return new ImageTiler().rebuildTiles(tiles, x, y);
	}
	
}
